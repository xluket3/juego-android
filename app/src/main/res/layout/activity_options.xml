<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/imagen_para_opciones"
    android:backgroundTint="#B3FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".ui.main.OptionsActivity">

    <!-- Caja translúcida con bordes -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#F9F9F9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciones del Juego"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp"/>

            <!-- Volumen -->
            <TextView
                android:id="@+id/tvVolumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volumen"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <SeekBar
                android:id="@+id/seekVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#63DB68"
                android:thumbTint="#63DB68"
                android:layout_marginBottom="16dp"/>

            <!-- Brillo -->
            <TextView
                android:id="@+id/tvBrillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brillo"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <SeekBar
                android:id="@+id/seekBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#FFD54F"
                android:thumbTint="#FFD54F"
                android:layout_marginBottom="24dp"/>

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#03DAC5"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
