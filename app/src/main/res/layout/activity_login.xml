<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/undefined"
    tools:context=".ui.login.LoginActivity">

    <!-- Tarjeta translúcida estilo burbuja -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#F9F9F9"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="28dp">

            <!-- Imagen central Bob Esponja -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/bob"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="12dp" />

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido a Fondo de Bikini!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="24dp" />

            <!-- Campo de correo -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:padding="14dp"
                android:textColorHint="#757575"
                android:textColor="#000000"
                android:background="@drawable/edittext_bob_syle"
                android:layout_marginBottom="16dp" />

            <!-- Campo de contraseña -->
            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:drawablePadding="8dp"
                android:padding="14dp"
                android:textColorHint="#757575"
                android:textColor="#000000"
                android:background="@drawable/edittext_bob_syle"
                android:layout_marginBottom="24dp" />

            <!-- Botón Iniciar Sesión -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#FFEB3B"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Botón Registrar -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#03A9F4"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver al menú"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#8BC34A"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
